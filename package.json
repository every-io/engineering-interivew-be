  "engines": {
    "node": "^16.16.x"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "dev": "nodemon src/main.ts",
    "start": "node dist/main.js",
    "test": "mocha './test/**/*.spec.ts'",
    "test:coverage": "nyc npm t",
    "typecheck:full": "NODE_OPTIONS=--max_old_space_size=2048 tsc"
