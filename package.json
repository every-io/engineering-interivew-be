  "mocha": {
    "require": [
      "wtfnode",
      "ts-node/register/transpile-only",
      "dotenv/config",
      "source-map-support/register",
      "test/helpers/mochaHooks.ts"
    ],
    "colors": true,
    "timeouts": 10000
  },
  "dependencies": {
    "@nestjs/common": "^8.0.11",
    "@nestjs/core": "^8.0.11",
    "@nestjs/platform-express": "^8.0.11",
    "@nestjs/typeorm": "^8.0.2",
    "config-decorators": "^0.2.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.2.2",
    "rxjs": "^7.4.0",
    "source-map-support": "^0.5.19",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.4.7",
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.4",
    "@types/express": "^4.17.1",
    "@types/faker": "^5.5.7",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.21",
    "@types/rosie": "0.0.37",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.0.0",
    "@types/validator": "^13.7.0",
    "@types/wtfnode": "^0.7.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^8.2.0",
    "faker": "^5.5.3",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "nock": "^13.0.5",
    "nodemon": "^2.0.4",
    "nyc": "^15.0.0",
    "progress": "^2.0.3",
    "rosie": "^2.0.1",
    "supertest": "^4.0.2",
    "timekeeper": "^2.2.0",
    "ts-mockito": "^2.4.2",
    "ts-node": "^8.3.0",
    "typescript": "^4.4.3",
    "wtfnode": "^0.8.3"
